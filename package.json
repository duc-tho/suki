{
    "name": "suki",
    "version": "1.0.0",
    "description": "Web app made by ntho",
    "main": "src/server/index.js",
    "scripts": {
        "client": "webpack --watch",
        "client-serve": "webpack-dev-server --mode development --devtool inline-source-map --hot",
        "server": "nodemon -e ts --exec \"npm run compile\"",
        "compile": "tsc -p tsconfig.server.json && node build/server",
        "start": "npm run build && tsc -p tsconfig.server.json && node build/server",
        "build": "webpack --mode production",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "dev-split": "concurrently \"npm run server\" \"npm run client-serve\"",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
        "lint:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'"
    },
    "author": "ntho",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.19.6",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.14",
        "@types/helmet": "^4.0.0",
        "@types/node": "^18.11.9",
        "@types/react": "^18.0.24",
        "@types/react-dom": "^18.0.8",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "babel-loader": "^9.0.0",
        "clean-webpack-plugin": "^4.0.0",
        "concurrently": "^7.5.0",
        "css-loader": "^6.7.1",
        "eslint": "^8.0.1",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.31.10",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "node-sass": "^7.0.3",
        "nodemon": "^2.0.20",
        "sass-loader": "^13.1.0",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.11.1",
        "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "helmet": "^6.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "*"
    }
}
